<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:background="@drawable/recyclerview"
        android:layout_marginTop="0dp"
        >
        <TextView
            android:id="@+id/issid"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvIssTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLostType"
            android:text="Reset Password Support"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvLastmsg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIssTitle"
            android:text="This is to tell u that issues has been  seen and will be solved..."
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            />
        <LinearLayout
            android:id="@+id/datestatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tvLastmsg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <TextView
                android:id="@+id/tvIssDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="2018-04-04 12:23"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/tvIsstatus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="sent"
                android:layout_marginLeft="55dp"
                android:textSize="10dp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hrborder"
            android:layout_below="@+id/datestatus"
            />
    </RelativeLayout>
