                android:id="@+id/tvIscStatus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="sent"
                android:layout_marginLeft="45dp"
                android:textSize="10dp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </RelativeLayout>
