<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:paddingBottom="10dp">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/login_fieldset">
        <TextView
            android:id="@+id/updateHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/update_header"
            android:text="@string/headerpaymentreg"/>
        <TextView
            android:id="@+id/tvNiD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nid"
            style="@style/fonts"
            android:background="@drawable/textviews"/>

        <EditText
            android:id="@+id/edtNiD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:drawableLeft="@mipmap/pay_card_blue"
            android:background="@drawable/edittexts"
            android:inputType="number"
            android:maxLength="16"></EditText>
        <TextView
            android:id="@+id/tvSendername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sendername"
            style="@style/fonts"
            android:background="@drawable/textviews"/>

        <EditText
            android:id="@+id/edtSendername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:drawableLeft="@mipmap/loguser"
            android:background="@drawable/edittexts"></EditText>
        <TextView
            android:id="@+id/tvSenderphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/senderphone"
            style="@style/fonts"
            android:background="@drawable/textviews"/>

        <EditText
            android:id="@+id/edtSenderphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:drawableLeft="@mipmap/phonenbr"
            android:background="@drawable/edittexts"
            android:inputType="number"
            android:maxLength="10"></EditText>
        <TextView
            android:id="@+id/tvRemainAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remainAmount"
            style="@style/fonts"
            android:background="@drawable/textviews"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/edtRemainAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:drawableLeft="@mipmap/id"
            android:background="@drawable/edittexts"
            android:editable="false"
            android:visibility="gone"></EditText>
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            style="@style/fonts"
            android:background="@drawable/textviews"/>

        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:drawableLeft="@mipmap/rwf"
            android:background="@drawable/edittexts"
            android:inputType="number"
            android:maxLength="6"></EditText>
        <TextView
            android:id="@+id/tvPaymode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paymode"
            style="@style/fonts"
            android:background="@drawable/textviews"/>
        <Spinner
            android:id="@+id/spnPaymode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:background="@drawable/spinners"
            ></Spinner>

        <TextView
            android:id="@+id/tvAccname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/fonts"
            android:background="@drawable/textviews"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvAccnbr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/fonts"
            android:background="@drawable/textviews"
            android:visibility="gone"/>
            <Button
                android:id="@+id/btnUpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnpay"
                style="@style/btn"
                android:background="@drawable/buttons"
                />
    </LinearLayout>
</ScrollView>
</LinearLayout><!-- From: file:/C:/Users/bpradmin/AndroidStudioProjects/igisubizo/app/src/main/res/layout/enduser_payment.xml -->