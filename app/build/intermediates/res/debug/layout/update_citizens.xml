<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="50dp"
    android:padding="10dp"
    android:background="@drawable/login_fieldset">
    <TextView
        android:id="@+id/updateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/update_header"
        android:text="@string/updateCitizenHeader"/>
    <TextView
        android:id="@+id/citid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/fonts"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/owner"
        style="@style/fonts"
        android:background="@drawable/textviews"/>

    <EditText
        android:id="@+id/edtOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:drawableLeft="@mipmap/loguser"
        android:background="@drawable/edittexts"></EditText>
    <TextView
        android:id="@+id/tvNid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nid"
        style="@style/fonts"
        android:background="@drawable/textviews"/>

    <EditText
        android:id="@+id/edtNid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:drawableLeft="@mipmap/pay_card_blue"
        android:background="@drawable/edittexts"
        android:inputType="number"
        android:maxLength="16"></EditText>
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/officetel"
        style="@style/fonts"
        android:background="@drawable/textviews"/>

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:drawableLeft="@mipmap/phonenbr"
        android:background="@drawable/edittexts"
        android:inputType="number"
        android:maxLength="10"></EditText>
    <!--TextView
        android:id="@+id/tvProv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/releaseProv"
        style="@style/fonts"/>
    <AutoCompleteTextView
        android:id="@+id/autoProv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        ></AutoCompleteTextView-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_btn">
        <Button
            android:id="@+id/btnUpd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnupdate"
            style="@style/btn"
            android:background="@drawable/buttons"
            />
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/bpradmin/AndroidStudioProjects/igisubizo/app/src/main/res/layout/update_citizens.xml -->