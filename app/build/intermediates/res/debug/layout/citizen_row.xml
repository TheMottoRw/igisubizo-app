<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/container">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="1dp" android:paddingBottom="5dp" android:paddingRight="1dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/recyclerview"
        >
        <TextView
            android:id="@+id/tvAnimalName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/citid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvOwner"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="MANZI ROGER ASUA"
            style="@style/fonts"/>
        <TextView
            android:id="@+id/tvGotDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvOwner"
            android:layout_marginTop="8dp"
            android:text="2017-04-12"/>
        <TextView
            android:id="@+id/tvNid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOwner"
            android:text="Identity Card"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tvNidNbr"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvNid"
            android:text="119980045073123"
            android:layout_below="@+id/tvOwner"
            android:layout_marginLeft="15dp"/>
            <Button
                android:id="@+id/btnViewDocs"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:text="@string/view"
                android:textColor="#fff"
                android:background="#09F"
                android:textStyle="bold"
                android:layout_below="@+id/tvNid"
                android:layout_marginLeft="15dp"
                />
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:text="@string/edit"
                android:textColor="#fff"
                android:background="#09F"
                android:textStyle="bold"
                android:layout_below="@+id/tvNidNbr"
                android:layout_toRightOf="@+id/btnViewDocs"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"/>
    </RelativeLayout>
</LinearLayout>
